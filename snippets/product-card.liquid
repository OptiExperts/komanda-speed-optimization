<div class="col-6 col-md-4 col-lg-3 mb-4 product-card-wrapper">
  <a href="{{ product.url | within: collection }}">
    <div class="product-card">
      <div class="salebadge">30% OFF</div>
      <img width="100%" height="100%"
        data-src="{{ product.featured_image | img_url: '720x'}}"
        data-srcset="{{ product.featured_image | img_url: '180x'}} 300w,
                {{ product.featured_image | img_url: '720x'}}600w,
                {{ product.featured_image | img_url: 'master'}} 900w"
        class="lazy2 lazyload"
        alt="{{ product.title | escape}} original canvas art">
      <div class="product-card-title">
        <h3>{{ product.title | downcase }}</h3>
        <div class="d-flex justify-content-between align-items-center pb-3 ">
          <div class="product-card-price ">{{ product.price_min | money_without_trailing_zeros }}</div>
          <div class="add-button">
            <span>See options</span>
          </div>
        </div>
      </div>
    </div>
  </a>

</div>