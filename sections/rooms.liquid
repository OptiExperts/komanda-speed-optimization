<div class="collection-section-bg pb-4" style="border-radius: 0;">
  <div class="container">
    <h3 class="mainpage-headers">shop by rooms</h3>
    <div id="rooms" class="main-collection-circles ">

      {% for collection in collections %}
        {% if collection.title contains "room" or collection.title == "Kitchen" or collection.title contains "Office" %}
          <div class="circle-wrapper">
            <a href="{{collection.url}}">
              <div class="rooms-image">
                <img
                  data-src="{{ collection.image.src | collection_img_url: '420x' }}"
                  class="lazyload"
                  alt="{{collection.title}} | Buy modern canvas & posters art  " />
              </div>
            </a>
            <a href="{{collection.url}}">
              <div class="collection-title text-center">
                {{ collection.title }}
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Room Collections",

    "presets": [
      {
        "name": "Room Section",
        "category": "Room Sections"
      }
    ]
  }
{% endschema %}