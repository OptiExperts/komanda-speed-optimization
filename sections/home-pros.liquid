<div class="home-pros mt-lg-5 py-3">
    <div class="d-flex flex-column flex-lg-row justify-content-around">
        {% for block in section.blocks %}
            <div class="home-pros-section d-flex flex-lg-column flex-row align-items-center">
              <div class="icon-pros-wrapper text-center">
                <img src="{{block.settings.image | img_url: 'master' }}" alt="Buy Modern Art Prints">
              </div>
                <div class="d-flex flex-column">
                <div class="pros-titel" >
                {{block.settings.titel}}
                
                </div>
                <div class="pros-description ">
                {{block.settings.descritption}}
                </div>
            </div>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
 "name": "Why always we",

"blocks": [
  {
    "name": "Sections",
    "type": "slie",
    "settings": [
      {
        "type": "text",
        "id": "titel",
        "label": "Titel"
      },
    {
      "type": "image_picker",
      "id": "image",
      "label": "icon"
    },
    {
      "type": "color",
      "id": "color_accent",
      "label": "Buttons color",
      "default": "#FFFFFF"
    },
      {
        "type": "text",
        "id": "descritption",
        "label": "Description"
      }
    ]
  }
],
    
      
      "presets": [{
           "name": "Second Section",
           "category": "Second Sections"
         }]
 }

{% endschema %}
